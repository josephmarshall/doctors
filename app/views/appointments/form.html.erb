<h1><%= @appointment.dateTime ? "Edit " : "New " %>Appointment with Dr. <%= @doctor.full_name %></h1>
<%= form_with(model: [@doctor, @appointment], local: true, class: "ui form") do |f| %>
<div class="form_input_label"><%= f.label :dateTime, "Date & Time" %></div>
<div class="form_input"><%= f.text_field :dateTime %></div>
<div class="form_input_label"><%= f.label :location %></div>
<div class="form_input"><%= f.select :location, ["Office #1", "Office #2", "Office #3"] %></div>
<div class="form_input_label"><%= f.label :patient_id, "Patient Name" %></div>
<div class="form_input"><%= f.select :patient_id, @patients.collect { |patient| [patient.full_name, patient.id] } %></div>
<%= f.submit %>
<% end %>
<br />
<hr />


